@model BookMyFlight.Backend.Models.EntityOrder

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card p-4">
            <div class="card-body">
                <div class="text-center mb-4">
                    <img src="/assets/images/airplane1.png" alt="Flight" height="60" class="mb-3" />
                    <h2 class="card-title">Flight Ticket Booking</h2>
                    <p class="text-muted">Enter your details to proceed to payment</p>
                </div>

                <form method="post" action="/createorder">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }
                    <div class="mb-3">
                        <label class="form-label fw-bold">Full Name</label>
                        <input type="text" name="Name" class="form-control" placeholder="Alphabet only (min 2)" required pattern="[A-Za-z\s]{2,}" title="Name should only contain alphabets and spaces, minimum 2 characters" value="@Model.Name" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Email Address</label>
                        <input type="email" name="Email" class="form-control" placeholder="john@example.com" required value="@Model.Email" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mobile Number</label>
                        <input type="text" name="Mobile" class="form-control" placeholder="Exactly 10 digits" required pattern="[0-9]{10}" title="Please enter exactly 10 digits" maxlength="10" value="@Model.Mobile" />
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Total Amount to Pay</label>
                        <div class="input-group">
                            <span class="input-group-text">₹</span>
                            <input type="number" name="Amount" class="form-control bg-light" value="@Model.Amount" required readonly />
                        </div>
                    </div>

                    <input type="hidden" name="UserId" value="@Model.UserId" />
                    <input type="hidden" name="Id" value="@Model.Id" />

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">Proceed to Confirm Payment</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


